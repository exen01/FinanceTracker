@page
@model DeleteModel

@{
    ViewData["Title"] = "Удаление категории";
}

<h1>@ViewData["Title"]</h1>

<h3>Вы уверены, что хотите удалить категорию &laquo;@Html.DisplayFor(model => model.Category.CategoryName)&raquo;?</h3>
<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Тип категории
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.TransactionType)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Category.Id"/>
        <div class="btn-group" role="group">
            <button type="submit" class="btn btn-danger">Удалить</button>
            <a asp-page="./Index" class="btn btn-secondary">Отмена</a>
        </div>
    </form>
</div>