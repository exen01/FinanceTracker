@page
@using FinanceTracker.Domain.Enums
@model EditModel

@{
    ViewData["Title"] = "Редактирование категории";
}
<div>
    <a asp-page="Index">Список категорий</a>
</div>
<h1>@ViewData["Title"]</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Category.CategoryName" class="control-label"></label>
                <input asp-for="Category.CategoryName" class="form-control"/>
                <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Category.TransactionType" class="control-label"></label>
                <select asp-for="Category.TransactionType" asp-items="@Html.GetEnumSelectList<TransactionType>()" class="form-select"></select>
                <span asp-validation-for="Category.TransactionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Сохранить</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}