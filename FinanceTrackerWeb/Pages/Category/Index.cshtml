@page
@using FinanceTracker.Domain.Enums
@model IndexModel

@{
    ViewData["Title"] = "Категории";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-success">+ Новая категория</a>
</p>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th scope="col">
            Категория
        </th>
        <th scope="col">
            Тип
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Category)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @if (item.TransactionType == TransactionType.Income)
                {
                    <span class="badge bg-success">@Html.DisplayFor(modelItem => item.TransactionType)</span>
                }
                else if (item.TransactionType == TransactionType.Expense)
                {
                    <span class="badge bg-danger">@Html.DisplayFor(modelItem => item.TransactionType)</span>
                }
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-success">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>